
#include <stdio.h>
#include <curses.h>
#include <math.h>
int main()
{int alunosesperados,aulas,turmas=0;
float receitaesperada,alunosporaula,mensalidadeesperada=0;
float inadimplencia=10;
char* nomeescola="Escola Motriz Claudia Ottoni";
printf("Ola, bem vindo(a) ao software de calculo de alunos e receita da %s!\n",nomeescola);
printf("Quantos alunos voce gostaria de ter matriculados e pagando?(maximo 400)\n");
scanf("%d",&alunosesperados);
if (10<alunosesperados&&alunosesperados<400){
printf("Certo, e quantos reais de receita voce gostaria de ter por mes?(somente numeros.)\n");
scanf("%f",&receitaesperada);
 printf("Otimo!, e esses alunos seriam divididos em quantas turmas?\n");
 scanf("%d",&turmas);
 printf("Quase la, diga-me agora qual a porcentagem(0 a 100) de alunos que NAO pagam a mensalidade?\n");
 scanf("%f",&inadimplencia);
 if(inadimplencia>=0&&inadimplencia<=99){
 alunosporaula=alunosesperados/turmas;
 alunosporaula=ceil(alunosporaula);
 mensalidadeesperada=(receitaesperada/(alunosesperados*(1-inadimplencia/100)));
 printf("Bom, nesse caso teriamos %d alunos no total, e %.0f alunos por turma, e para suprir a receita esperada de R$%.2f, cada aluno deveria pagar a mensalidade de R$%.2f.",alunosesperados,alunosporaula,receitaesperada,mensalidadeesperada);
  timeout(5000);
}else{
printf("Porcentagem de inadimplentes invalida");
timeout(2000);
}
}else {
printf("valor invalido");
timeout(2000);
}
}
